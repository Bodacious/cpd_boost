<span class="like_button">
  <% if already_voted_by_user?(post) %>
    <%= link_to post_vote_path(post, vote_object(post)), method: 'delete', remote: true do %>
      <span id="post_<%= post.slug %>_votes" class="fa fa-heart" aria-hidden="true"> <%= post.votes.size %></span>
      <% end %>
  <% else %>
    <%= link_to post_votes_path(post), method: 'post', remote: true do %>
      <span id="post_<%= post.slug %>_votes" class="fa fa-heart-o" aria-hidden="true"> <%= post.votes.size %></span>
    <% end %>
  <% end %>
</span>